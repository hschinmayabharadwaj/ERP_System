{
  "name": "erp-system",
  "version": "1.0.0",
  "description": "Complete ERP System for Educational Institutions",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "start": "npm start --workspace=backend",
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules"
  },
  "keywords": [
    "erp",
    "education",
    "management",
    "admissions",
    "fees",
    "hostel"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@tsparticles/react": "^3.0.0",
    "react-tsparticles": "^2.12.2"
  }
}
